import math

def calculate_s(x, t, z):

    step1 = 2(t(-x))  #2^(y^(-x))
    step2 = (3x)t      #(3^x)^y
    step3_num = t * (math.atan(z) - 1/3)    #t * (arctgz - 1/3)
    step3_denom = abs(x) + 1 / (t**2 + 1)   #|x| + 1/(y^2 + 1)
    step3 = step3_num / step3_denom   

    s = step1 + step2 - step3

    return s

x = float(input("Введите значение x: "))
t = float(input("Введите значение t: "))
z = float(input("Введите значение z: "))

s = calculate_s(x, t, z)
print("Значение s:", s)
